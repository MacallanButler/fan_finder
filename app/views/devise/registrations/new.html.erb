<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="bg-white shadow-lg rounded-lg p-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-6 text-center">Sign Up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="space-y-6">
          <div>
            <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>

          <div>
            <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <% if @minimum_password_length %>
              <span class="text-xs text-gray-500">(minimum <%= @minimum_password_length %> characters)</span>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 mt-1" %>
          </div>

          <div>
            <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>

          <div>
            <%= f.submit "Sign up", class: "w-full bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 font-semibold text-lg cursor-pointer" %>
          </div>
        </div>
      <% end %>

      <div class="mt-6 text-center">
        <%= link_to "Already have an account? Log in", new_session_path(resource_name), class: "text-blue-600 hover:underline font-medium" %>
      </div>
    </div>
  </div>
</div>