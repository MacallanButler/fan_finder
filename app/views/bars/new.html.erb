<% if current_user.team %>
  <style>
    :root {
      --team-primary: <%= current_user.team.primary_color %>;
    }
  </style>
<% end %>

<div class="max-w-2xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">Submit a Bar</h1>

  <% if flash[:alert] %>
    <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded mb-4">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= form_with model: @bar, class: "bg-white shadow rounded-lg p-6" do |f| %>
    <div class="space-y-4">
      <div>
        <%= f.label :name, "Bar Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :name, required: true, class: "w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2", 
            style: "focus:ring-color: #{current_user.team&.primary_color || '#3B82F6'};" %>
      </div>
      
      <div>
        <%= f.label :address, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :address, required: true, class: "w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2", 
            style: "focus:ring-color: #{current_user.team&.primary_color || '#3B82F6'};" %>
      </div>
      
      <div>
        <%= f.label :city, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :city, required: true, class: "w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2", 
            style: "focus:ring-color: #{current_user.team&.primary_color || '#3B82F6'};" %>
      </div>
      
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Which teams go here?</label>
        <div class="grid grid-cols-2 gap-2 max-h-64 overflow-y-auto p-3 border border-gray-300 rounded">
          <%= collection_check_boxes(nil, :team_ids, @teams, :id, :name) do |b| %>
            <label class="flex items-center">
              <%= b.check_box class: "mr-2" %>
              <span class="text-sm text-gray-700"><%= b.text %></span>
            </label>
          <% end %>
        </div>
      </div>
      
      <%= f.submit "Submit Bar", class: "w-full text-white px-6 py-3 rounded-lg hover:opacity-90 cursor-pointer text-lg font-semibold mt-6",
          style: "background-color: #{current_user.team&.primary_color || '#3B82F6'};" %>
    </div>
  <% end %>

  <%= link_to "Back to Search", root_path, class: "block text-center hover:underline mt-4",
      style: "color: #{current_user.team&.primary_color || '#3B82F6'};" %>
</div>